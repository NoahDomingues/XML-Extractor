<Window
  x:Class="XML_Extractor.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="XML Extractor"
  Width="700" Height="500"
  Background="{StaticResource WindowBackground}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Button panel -->
        <StackPanel Orientation="Horizontal">
            <Button x:Name="BtnSelectFile" Click="BtnSelectFile_Click">
                Select File…
            </Button>
            <Button x:Name="BtnSelectFolder" Click="BtnSelectFolder_Click">
                Select Folder…
            </Button>
            <Button x:Name="BtnExtract" Click="BtnExtract_Click" IsEnabled="False">
                Extract
            </Button>
        </StackPanel>

        <!-- Indeterminate ProgressBar -->
        <ProgressBar
      x:Name="ExtractionProgress"
      Grid.Row="1"
      IsIndeterminate="True"
      Visibility="Collapsed"/>

        <!-- Log output -->
        <TextBox
      x:Name="LogBox"
      Grid.Row="2"
      Margin="0,8,0,0"
      TextWrapping="Wrap"
      VerticalScrollBarVisibility="Auto"
      IsReadOnly="True"/>
    </Grid>
</Window>
