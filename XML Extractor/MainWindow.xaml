<Window
  x:Class="XML_Extractor.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="XML Extractor"
  Width="600" Height="400"
  MinWidth="480" MinHeight="320"
  Background="{StaticResource WindowBackground}"
  WindowStartupLocation="CenterScreen">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Select buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Extract -->
            <RowDefinition Height="Auto"/>
            <!-- ProgressBar -->
            <RowDefinition Height="*"/>
            <!-- LogBox -->
            <RowDefinition Height="Auto"/>
            <!-- Footer links -->
        </Grid.RowDefinitions>

        <!-- 1. Title -->
        <TextBlock
      Grid.Row="0"
      Text="XML Extractor"
      FontSize="20"
      FontWeight="Bold"
      Foreground="{StaticResource TextLight}"
      HorizontalAlignment="Center"
      Margin="0,0,0,12"/>

        <!-- 2. Select File & Folder -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- NO Content="…" ATTRIBUTE → use inner text only -->
            <Button
        Grid.Column="0"
        x:Name="BtnSelectFile"
        Click="BtnSelectFile_Click"
        HorizontalAlignment="Stretch"
        Margin="0,0,4,0">
                Select File…
            </Button>

            <Button
        Grid.Column="1"
        x:Name="BtnSelectFolder"
        Click="BtnSelectFolder_Click"
        HorizontalAlignment="Stretch"
        Margin="4,0,0,0">
                Select Folder…
            </Button>
        </Grid>

        <!-- 3. Extract (full width) -->
        <Button
      Grid.Row="2"
      x:Name="BtnExtract"
      Click="BtnExtract_Click"
      HorizontalAlignment="Stretch"
      Margin="0,8,0,0"
      IsEnabled="False">
            Extract
        </Button>

        <!-- 4. ProgressBar (always visible) -->
        <ProgressBar
      Grid.Row="3"
      x:Name="ExtractionProgress"
      Minimum="0"
      Maximum="1"
      Value="0"/>

        <!-- 5. Log output -->
        <TextBox
      Grid.Row="4"
      x:Name="LogBox"
      Margin="0,8,0,0"
      TextWrapping="Wrap"
      VerticalScrollBarVisibility="Auto"
      IsReadOnly="True"/>
        <!-- Footer links -->
        <StackPanel Grid.Row="5"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,10,0,0">

            <TextBlock Margin="0,0,10,0" VerticalAlignment="Center" ToolTip="About XML Extractor">
        <Hyperlink Click="AboutLink_Click"
                   Foreground="{StaticResource AccentRed}">
            About
        </Hyperlink>
            </TextBlock>

            <TextBlock Margin="0,0,10,0" VerticalAlignment="Center" ToolTip="Modding Community Discord">
        <Hyperlink RequestNavigate="Hyperlink_RequestNavigate"
                   NavigateUri="https://discord.gg/Z88NnTgpWU"
                   Foreground="{StaticResource AccentRed}">
            Discord
        </Hyperlink>
            </TextBlock>

            <TextBlock VerticalAlignment="Center" ToolTip="GitHub Repository">
        <Hyperlink RequestNavigate="Hyperlink_RequestNavigate"
                   NavigateUri="https://github.com/NoahDomingues/XML-Extractor"
                   Foreground="{StaticResource AccentRed}">
            GitHub
        </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
