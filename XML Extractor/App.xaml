<Application
  x:Class="XML_Extractor.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  StartupUri="MainWindow.xaml">

    <Application.Resources>
        <!-- Dark window background -->
        <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>

        <!-- Red accent color -->
        <SolidColorBrush x:Key="AccentRed" Color="#E53935"/>

        <!-- Light text -->
        <SolidColorBrush x:Key="TextLight" Color="#EEEEEE"/>

        <!-- Styled Buttons -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Styled Log TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Styled ProgressBar -->
        <Style TargetType="ProgressBar">
            <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Height" Value="4"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>
    </Application.Resources>
</Application>
